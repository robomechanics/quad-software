<?xml version="1.0" ?>
<sdf version="1.6">
    <model name="split_belt_treadmill">
        <static>true</static>   <!-- keep the model static -->

        <!-- left belt -->
        <link name="left_belt">
            <pose>0 0.25 0.05 0 0 0</pose>
            <collosion name="left_belt_collision">
                <geometry>
                    <box><size>4.0 0.5 0.1</size></box>  <!-- length of X,Y,Z direction -->
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0.8</mu>
                            <mu2>0.8</mu2>
                        </ode>
                    </friction>
                </surface>
            </collosion>
            <visual name="left_belt_visual">
                <geometry>
                    <box><size>4.0 0.5 0.1</size></box>
                </geometry>
                <material>
                    <ambient>0.0 0.0 1.0 1.0</ambient>  <!-- blue -->
                </material>
            </visual>
        </link>

        <!-- right belt -->
        <link name="right_belt">
            <pose>0 -0.25 0.05 0 0 0</pose>
            <collosion name="right_belt_collision">
                <geometry>
                    <box><size>4.0 0.5 0.1</size></box>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0.8</mu>
                            <mu2>0.8</mu2>
                        </ode>
                    </friction>
                </surface>
            </collosion>
            <visual name="right_belt_visual">
                <geometry>
                    <box><size>4.0 0.5 0.1</size></box>
                </geometry>
                <material>
                    <ambient>1.0 0.0 0.0 1.0</ambient>  <!-- red -->
                </material>
            </visual>
        </link>

        <!-- Define the joint so the belts can spin -->
        <joint name="left_belt_joint" type="revolute">
            <parent>world</parent>
            <child>left_belt</child>
            <axis>
                <xyz>1 0 0</xyz>  <!-- spin around x -->
                <limit>
                    <lower>-3</lower>
                    <upper>5</upper>
                </limit>
                <dynamics>
                    <damping>0.0</damping>
                </dynamics>
            </axis>
        </joint>

        <joint name="right_belt_joint" type="revolute">
            <parent>world</parent>
            <child>right_belt</child>
            <axis>
                <xyz>1 0 0</xyz>  <!-- spin around x -->
                <limit>
                    <lower>-3</lower>
                    <upper>5</upper>
                </limit>
                <dynamics>
                    <damping>0.0</damping>
                </dynamics>
            </axis>
        </joint>

    </model>
</sdf>