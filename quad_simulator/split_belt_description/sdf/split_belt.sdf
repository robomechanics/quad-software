<sdf version="1.6">
  <model name="split_belt_treadmill">
    <static>true</static>

    <!-- Base Link (Fixed in Place) -->
    <link name="base_link">
      <collision name="base_collision">
        <geometry>
          <box>
            <size>6.0 1.0 0.01</size>
          </box>
        </geometry>
      </collision>
      <visual name="base_visual">
        <geometry>
          <box>
            <size>6.0 1.0 0.01</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Black</name>
          </script>
        </material>
      </visual>
    </link>

    <!-- Left Belt -->
    <link name="left_belt">
      <collision name="left_belt_collision">
        <geometry>
          <box>
            <size>6.0 0.5 0.01</size>
          </box>
        </geometry>
      </collision>
      <visual name="left_belt_visual">
        <geometry>
          <box>
            <size>6.0 0.5 0.01</size>
          </box>
        </geometry>
      </visual>
      <pose>0 0.25 0.005 0 0 0</pose>
    </link>

    <!-- Right Belt -->
    <link name="right_belt">
      <collision name="right_belt_collision">
        <geometry>
          <box>
            <size>6.0 0.5 0.01</size>
          </box>
        </geometry>
      </collision>
      <visual name="right_belt_visual">
        <geometry>
          <box>
            <size>6.0 0.5 0.01</size>
          </box>
        </geometry>
      </visual>
      <pose>0 -0.25 0.005 0 0 0</pose>
    </link>

    <!-- Joint between base and left belt -->
    <joint name="left_belt_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_belt</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-6.28</lower>
          <upper>6.28</upper>
        </limit>
        <dynamics>
          <damping>0.1</damping>
        </dynamics>
      </axis>
    </joint>

    <!-- Joint between base and right belt -->
    <joint name="right_belt_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_belt</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-6.28</lower>
          <upper>6.28</upper>
        </limit>
        <dynamics>
          <damping>0.1</damping>
        </dynamics>
      </axis>
    </joint>

    <!-- Plugin for controlling the belts -->
    <plugin name="treadmill_plugin" filename="libgazebo_ros_control.so">
      <robotNamespace>/split_belt_treadmill</robotNamespace>
    </plugin>
  </model>
</sdf>